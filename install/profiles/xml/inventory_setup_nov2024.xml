                <label locale="en_US">
                    <name>Set types</name>
                </label>
            </labels>
            <items>
                <item idno="inventory" enabled="1" default="0" access="1" rank="205" type="concept">
                    <labels>
                        <label locale="en_US" preferred="1">
                            <name_singular>Inventory</name_singular>
                            <name_plural>Inventories</name_plural>
                            <description/>
                        </label>
                    </labels>
                    <settings>
                        <setting name="random_generation_mode">2</setting>
                        <setting name="random_generation_size">100</setting>
                    </settings>
                </item>
            </items>
        </list>
        <list code="inventory_dispositions" hierarchical="1" system="0" vocabulary="0">
            <labels>
                <label locale="en_US">
                    <name>Set types</name>
                </label>
            </labels>
            <items>
                <item idno="found" enabled="1" default="0" access="1" rank="10" type="concept">
                    <labels>
                        <label locale="en_US" preferred="1">
                            <name_singular>Found</name_singular>
                            <name_plural>Found</name_plural>
                            <description/>
                        </label>
                    </labels>
                </item>
                <item idno="not_found" enabled="1" default="0" access="1" rank="20" type="concept">
                    <labels>
                        <label locale="en_US" preferred="1">
